FROM ghcr.io/deepflowio/rust-build:1.26 as builder
COPY .  /deepflow/
WORKDIR /deepflow/agent
ARG GITHUB_REF_NAME
RUN source /opt/rh/devtoolset-11/enable && cp docker/rust-proxy-config /usr/local/cargo/config && RUSTFLAGS="-C force-frame-pointers=yes" cargo build --release && \
    cargo build --release --bin deepflow-agent-ctl && \
    ls -alh target/release
FROM scratch
COPY --from=builder /deepflow/agent/ /
