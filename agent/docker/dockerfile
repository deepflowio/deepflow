FROM docker.io/alpine

ARG TZ='Asia/Harbin'
ENV DEFAULT_TZ ${TZ}
ENV IN_CONTAINER yes
RUN --mount=target=/tmp-mount \
    sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories && \
    apk upgrade --update \
    && apk add -U tzdata \
    && cp /usr/share/zoneinfo/${DEFAULT_TZ} /etc/localtime \
    && apk del tzdata \
    && apk add valgrind \
    && rm -rf /var/cache/apk/*  && \
    chmod 600 /etc/passwd; \
    echo "deepflow:x:1000:1000::/home/deepflow:/bin/bash" >> /etc/passwd; \
    echo "root:root" | chpasswd; \
    chmod 000 /etc/passwd; \
    mkdir -p /lib64 && \
    cp -raf /tmp-mount/output/target/release/deepflow-agent /bin/  && \
    cp -raf /tmp-mount/output/target/release/deepflow-agent-ctl /bin/  && \
    cp -raf /tmp-mount/output/src/ebpf/deepflow-ebpfctl /bin/  && \
    cp -raf /tmp-mount/docker/require/* /lib64  && \
    chmod 4755 /bin/busybox 

USER root

CMD valgrind --tool=massif --time-unit=B /bin/deepflow-agent -f /etc/deepflow-agent/deepflow-agent.yaml
